<h1 class="text-center">Foods</h1>

<% if can? :read, @user.food[0] %>
  <%= link_to "Add Food", new_user_food_path, class: "btn btn-dark float-end m-4" %>

  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th scope="col">Food</th>
        <th scope="col">Measurement unit</th>
        <th scope="col">Unit price</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>

    <tbody>
      <% @user.food.each do |food| %>
          <%= render food %>
      <% end %>
    </tbody>
  </table>

<% else %>
  <p class="text-center my-5">You are not allowed to view other users food.</p>
<% end %>
