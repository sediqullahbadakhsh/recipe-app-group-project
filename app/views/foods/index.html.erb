<h1>Foods</h1>

  <%= link_to "Add Food", new_user_food_path%>

  <table class="table">
    <thead>
      <tr>
        <th scope="col">Food</th>
        <th scope="col">Measurement unit</th>
        <th scope="col">Unit price</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @user.food.each do |food| %>
        <% if can? :manage, food %>
          <%= render food %>
        <% else %>
          <tr>
            <td scope="row">
              <p>You are not allowed to view other users food.</p>
            </td>
          </tr>
        <% end %>
      <% end %>
    </tbody>
  </table>
