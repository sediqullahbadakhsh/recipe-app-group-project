<h1>Foods</h1>

<%= link_to "Add Food", new_user_food_path%>

<table class="table">
  <thead>
    <tr>
      <th scope="col">Food</th>
      <th scope="col">Measurement unit</th>
      <th scope="col">Unit price</th>
      <th scope="col">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @user.food.each do |food| %>
      <%= render food %>
    <% end %>
  </tbody>
</table>
