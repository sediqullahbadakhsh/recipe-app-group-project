<h1 class='text-center'>Shopping List</h1>
<div class="d-flex gap-4 my-5">
  <div class='flex container'><span class='fw-bold'>Amount of food items to buy:</span> <%= @total_items %></div>
  <div class='flex container'><span class='fw-bold'>Total value of food nested:</span> $<%= @total_value %></div>
</div>

<div class="index flex-col">
  <table class="table table-striped table-bordered">
    <thead class="table-dark">
      <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>

    <%@recipe_foods.each do |item|%>
    <tr>
      <td><%= item.food.name %></td>
      <td><%= item.quantity %> <%= item.food.measurement_unit %></td>
      <td>$<%= item.food.price * item.quantity %></td>
    </tr>
    <%end%>
  </table>
</div> 
