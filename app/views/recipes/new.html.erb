<h1>New Recipe</h1>

<%= form_with(scope: :recipes, url: user_recipes_path(@user), method: :post, local: true, class: 'd-grid gap-3') do |f| %>

  <div>
    <%= f.label :name %><br />
    <%= f.text_field :name%>
  </div>

  <div>
    <%= f.label :description %><br />
    <%= f.text_field :description %>
  </div>

  <div>
    <%= f.label :preparation_time %><br />
    <%= f.number_field :preparation_time, :step => "0.01" %>
  </div>

  <div>
    <%= f.label :cooking_time %><br />
    <%= f.number_field :cooking_time, :step => "0.01" %>
  </div>

  <div class="d-flex gap-2">
    <%= f.check_box :public %>
    <%= f.label :public %><br />
  </div>

  <div>
    <%= f.submit "Add Recipe", class:"btn btn-dark"%>
  </div>
<% end %>
